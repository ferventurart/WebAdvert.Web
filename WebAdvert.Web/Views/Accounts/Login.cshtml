@model WebAdvert.Web.Models.Accounts.LoginModel;

    <div class="row">
        <div class="col-md-4">
            <h4>Login using your email address and password</h4>
            <h5 class="alert alert-info">Login using your email address and password</h5>
            <hr />
            <form method="post" asp-controller="Accounts" asp-action="Login">
                <h4>Create a new account</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="RememberMe"></label>
                    <input asp-for="RememberMe" />
                    @Html.DisplayName("RememberMe")
                </div>

                <button type="submit" class="btn btn-success">Login</button>
                <div class="alert alert-info mt-5">
                    Not a member yet? <a asp-action="Signup" asp-controller="Accounts" class="btn">Click here to Sign Up!</a>
                </div>
            </form>
        </div>
    </div>